{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* base options */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["apps/constants/*"],
      "@prisma/*": ["prisma/*"],
      "@shared/*": ["shared/*"]
    },

    /* linting */
    "strict": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* bundler options */
    "noEmit": true,
    "newLine": "lf",
    "jsx": "react-jsx",
    "removeComments": true,
    "verbatimModuleSyntax": true
  },
  "exclude": ["coverage"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
