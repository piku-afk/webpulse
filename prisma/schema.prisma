generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model websites {
  id      Int       @id @default(autoincrement())
  url     String    @db.VarChar(255)
  name    String?   @db.VarChar(50)
  active  Boolean   @default(false)
  reports reports[]
}

model reports {
  id         Int      @id @default(autoincrement())
  websitesId Int
  created_at DateTime @default(now())
  version    String   @db.VarChar(10)
  file_slug  String?  @db.VarChar(50)
  audits     audits[]
  website    websites @relation(fields: [websitesId], references: [id])
}

model audits {
  id              Int           @id @default(autoincrement())
  reportsId       Int
  audit_detailsId Int
  score           Int
  actual_value    Float
  audit           audit_details @relation(fields: [audit_detailsId], references: [id])
  report          reports       @relation(fields: [reportsId], references: [id])
}

model audit_details {
  id                Int      @id @default(autoincrement())
  title             String   @db.VarChar(50)
  key               String   @db.VarChar(50)
  description       String?  @db.VarChar(255)
  documentationLink String?  @db.VarChar(100)
  unit              String?  @db.VarChar(10)
  audits            audits[]
}
